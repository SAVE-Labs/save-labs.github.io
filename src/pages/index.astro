---
import "../styles/global.css";

import ProjectItem from "../components/ProjectItem.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>SAVE Labs</title>
	</head>
	<body>
		<div class="bg-white">
			<!-- Header -->
			<div class="relative bg-slate-500 pb-32">
				<div class="absolute inset-0">
					<!-- <img
						class="size-full object-cover"
						src="https://images.unsplash.com/photo-1525130413817-d45c1d127c42?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1920&q=60&&sat=-100"
						alt=""
					/> -->
					<div
						class="absolute inset-0 bg-slate-600 mix-blend-multiply"
						aria-hidden="true"
					>
					</div>
				</div>
				<div
					class="relative mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8"
				>
					<div class="mx-auto max-w-2xl text-center">
						<h2
							class="text-5xl font-semibold tracking-tight text-white sm:text-7xl"
						>
							SAVE Labs
						</h2>
						<p
							class="mt-8 text-lg font-medium text-pretty text-gray-300 sm:text-xl/8"
						>
							SAVE Labs is a collaboration between <a
								href="https://santing.net"
								class="underline"
								target="_blank">santing.net</a
							> and <a
								href="https://www.vellinga.dev"
								class="underline"
								target="_blank">vellinga.dev</a
							>. See our projects below.
						</p>
					</div>
				</div>
			</div>

			<!-- Overlapping cards -->
			<section
				class="relative z-10 mx-auto -mt-32 max-w-7xl px-6 pb-32 lg:px-8"
				aria-labelledby="project-heading"
			>
				<h2 class="sr-only" id="project-heading">Our projects</h2>
				<div
					class="grid grid-cols-1 gap-y-20 lg:grid-cols-3 lg:gap-x-8 lg:gap-y-20"
				>
					<ProjectItem
						title="Securetranfser"
						link="https://securetransfer.link"
						img="securetransfer.svg"
						color="cyan"
					>
						Receiving files or secrets through email is insecure.
						With SecureTransfer.link, you control who has access to
						the data you send and receive, ensuring complete privacy
						- even we can't see your data.
					</ProjectItem>
					<ProjectItem
						title="Schedulr"
						link="https://schedulr.link"
						img="schedulr.webp"
						color="indigo"
					>
						Quickly collect info on the availability of your friends
						and family.
					</ProjectItem>
					<ProjectItem
						title="Snatcher"
						link="https://snatcher.dev"
						img="snatcher.svg"
						color="emerald"
					>
						Debug your software sending emails or HTTP requests in
						real time.
					</ProjectItem>
				</div>
			</section>

			<footer>
				<div
					class="max-w-7xl mx-auto py-12 px-4 overflow-hidden sm:px-6 lg:px-8"
				>
					<nav
						class="-mx-5 -my-2 flex flex-wrap justify-center"
						aria-label="Footer"
					>
						<div class="px-5 py-2">
							<a
								href="https://github.com/SAVE-Labs"
								class="font-bold text-gray-500 hover:text-gray-900"
								target="_blank"
							>
								Github
							</a>
						</div>
					</nav>
					<p class="mt-8 text-center text-sm text-gray-300">
						&copy; <a href="https://santing.net" target="_blank"
							>Santing.net</a
						>
						& <a href="https://www.vellinga.dev" target="_blank"
							>Vellinga.dev</a
						>
					</p>
				</div>
			</footer>
		</div>
	</body>
</html>
